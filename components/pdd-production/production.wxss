/* components/production.wxss */

.production {
  display: flex;
  padding: 20rpx;
  background-color: rgb(255, 255, 255);
  width: calc(100vw - 40rpx);
  border:1px dashed rgba(231, 228, 228, 0.5);
}
.p-left-cover {
  width: 25vw;
  height: 25vw;
  flex-shrink: 0;
  margin-right: 20rpx;
  border-radius: 8rpx;
}
.p-right-view {
  width: calc(100vw - 40rpx - 20rpx - 25vw);
  flex-grow: 0;
  height: 25vw;
  display: flex;
  flex-direction: column;
}
.p-name {
  font-size: 24rpx;
  word-break: break-all;
  line-height: 30rpx;
  display: block;
  margin-bottom: 6rpx;
  max-height: 60rpx;
  overflow: hidden;
  flex-shrink: 0;
  flex-grow: 0;
}
.p-info {
  flex-grow: 1;
  margin-top: 5%;
}
.p-info-discount {
  border: 1rpx solid rgb(201, 3, 3);
  font-size: 26rpx;
  font-weight: 400;
  padding: 2rpx 4rpx;
  height: 30rpx;
  border-radius: 15rpx;
  color: rgb(201, 3, 3);
  margin-right: 10rpx;

}
.p-info-sale {
  font-size: 22rpx;
  height: 30rpx;
  color: grey;
}

.p-price {
  margin-bottom: 0rpx;
  width: 100%;
  display: flex;
  align-items: flex-end;
  flex-shrink: 0;
}
.p-price1 {
  font-size: 24rpx;
  margin-right: 8rpx;
}
.p-price2 {
  font-size: 40rpx;
  color: rgb(201, 3, 3);
  font-weight: bold;
  margin-right: 10rpx;
}
.p-price3 {
  font-size: 22rpx;
  color: gray;
  text-decoration: line-through;
}

.p-lq {
  width: 25%;
  background: rgb(201, 3, 3);
  border: 2rpx solid rgb(201, 3, 3);
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  padding: 2rpx 4rpx;
  height: auto;
  border-radius: 15rpx;
  color: #f0f0f0;
  float: right;
  margin-right: 1rpx;
}
.ppre {
  color: rgb(201, 3, 3);
  font-weight: bold;
  font-size: 24rpx !important;
}

.p-share {
  text-align: right;
  font-size: 24rpx;
  background-color: rgb(201, 3, 3);
  color: white;
  padding: 6rpx 10rpx;
  height: 34rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
